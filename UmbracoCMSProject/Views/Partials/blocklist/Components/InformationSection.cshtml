@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<Umbraco.Cms.Core.Models.Blocks.BlockListItem>
@using ContentModels = Umbraco.Cms.Web.Common.PublishedModels;

@{
    var info = (ContentModels.InformationSection)Model.Content;
}

<section class="w-full bg-white-100 pt-20 pb-10">
    <div class="max-w-7xl mx-auto px-6">

        <div class="flex flex-col lg:flex-row items-start gap-12">

            <div class="relative">

                @if (info.GrayImage != null)
                {
                    <img src="@info.GrayImage.Url()"
                         alt="gray shape"
                         class="absolute -bottom-0 -left-6 w-[420px] opacity-80 z-0" />
                }

                <img src="@info.Image1?.Url()"
                     alt="portrait"
                     class="relative z-10 w-[350px] lg:w-[420px] object-cover" />

                @if (info.Dots != null)
                {
                    <img src="@info.Dots.Url()"
                         alt="dots"
                         class="absolute -top-4 right-0 w-28 opacity-60 z-20" />
                }

            </div>
       
            <div class="flex-1 max-w-lg">
                <h2 class="text-3xl lg:text-4xl font-bold text-primary mb-8 leading-tight">
                    @info.Headline
                </h2>

                <div class="space-y-8 text-primary text-lg">                
                    <div class="flex gap-4">
                        <img src="@info.Location?.Url()" class="w-6 mt-1" />
                        <div>
                            <p class="font-semibold">@info.LocationText</p>
                            <p class="text-sm">@info.LocationTextAddress</p>
                        </div>
                    </div>
                    
                    <div class="flex gap-4">
                        <img src="@info.PhoneIcon?.Url()" class="w-6 mt-1" />
                        <div>
                            <p class="font-semibold">@info.PhoneText</p>
                            <p class="text-sm">@info.PhoneNumber</p>
                        </div>
                    </div>
                 
                    <div class="flex gap-4">
                        <img src="@info.EmailImage?.Url()" class="w-6 mt-1" />
                        <div>
                            <p class="font-semibold">@info.EmailText</p>
                            <p class="text-sm">@info.EmailAddressText</p>
                        </div>
                    </div>

                </div>
            </div>

        </div>

    </div>
</section>




