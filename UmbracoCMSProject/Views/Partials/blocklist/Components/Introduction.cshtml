@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<Umbraco.Cms.Core.Models.Blocks.BlockListItem>
@using ContentModels = Umbraco.Cms.Web.Common.PublishedModels;

@{
    var content = (ContentModels.Introduction)Model.Content;
}

<section class="py-20">
    <div class="container mx-auto flex gap-10 items-start">

        <div class="w-auto flex-shrink-0">
            @if (content.ImageSection != null)
            {                
                <img src="@content.ImageSection.Url()" alt="" class="w-full max-w-sm h-auto object-cover" />
               
            }

            @if (!string.IsNullOrWhiteSpace(content.Signature))
            {
                <p class="text-sm mt-3 text-primary">@content.Signature</p>
            }

        </div>

        <div class="flex-1 flex flex-col gap-6 text-primary">

            @if (!string.IsNullOrWhiteSpace(content.Text1))
            {
                <p class="text-xl italic leading-relaxed">@content.Text1</p>
            }

            @if (!string.IsNullOrWhiteSpace(content.Text2))
            {
                <p class="text-lg leading-relaxed">@content.Text2</p>
            }

        </div>
    </div>
</section>





